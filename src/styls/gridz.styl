.gridz
    margin auto
    .item 
        height 20rem
        background orange
        border 1px solid black
        width 100%
    +above(640px)
        display grid
        grid-template-columns: repeat(4,1fr)
        grid-gap: 1rem
        max-width 1280px
        .item:nth-child(1)
            grid-column: 1/3
            grid-row: 1
        .item:nth-child(2)
            grid-column 3/5
            grid-row 1
        .item:nth-child(3)
            grid-column 1/3
            grid-row 2
        .item:nth-child(4)
            grid-column 3/5
            grid-row 2
        .item:nth-child(5)
            grid-column 1/3
            grid-row 3
        .item:nth-child(6)
            grid-column 3/5
            grid-row 3
        .item:nth-child(7)
            grid-column 1/3
            grid-row 4
        .item:nth-child(8)
            grid-column 3/5
            grid-row 4

    +above(1040px)
        display grid
        grid-template-columns: repeat(4,1fr)
        grid-gap: 1rem
        max-width 1280px
        .item:nth-child(1)
            grid-column: 1/2
            grid-row: 1
        .item:nth-child(2)
            grid-column 2/3
            grid-row 1
        .item:nth-child(3)
            grid-column 3/4
            grid-row 1
        .item:nth-child(4)
            grid-column 4/5
            grid-row 1
        .item:nth-child(5)
            grid-column 1/2
            grid-row 2
        .item:nth-child(6)
            grid-column 2/3
            grid-row 2
        .item:nth-child(7)
            grid-column 3/4
            grid-row 2
        .item:nth-child(8)
            grid-column 4/5
            grid-row 2